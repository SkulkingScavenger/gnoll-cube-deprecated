    root.crnt_step += 1;
    root.active = true;
    with(root){
      event_user(3);
    }
    instance_destroy();
  }
  break;
  
default://enter keystroke
  if (string_length(namestr) &lt; max_length){
    namestr += hovered.text;
    textind += 1;
  }
  break;
}

            <string>///Press Button
switch(hovered.btn_index){
case 29://SHIFT
  uppercase = !uppercase;
  for(i=0;i&lt;26;i+=1){
    btn_array[i mod 10,i div 10].text = chr(i+97-(32*uppercase));
  }
  break;

case 40://BACKSPACE
  if (string_length(namestr) &gt; 0){
    namestr = string_delete(namestr,textind-1,1);
    textind -= 1;
  }
  break;
  
case 41://CANCEL
  with(root){
    event_user(3);
  }
  root.active = true;
  instance_destroy();
  break;
  
case 42://END
  if(file_exists(string(namestr) + '.txt')){
    answer = show_question_menu("There is already a character named " + namestr + ". Do you want to overwrite this character?");
    return_from = 1;
  }else{
